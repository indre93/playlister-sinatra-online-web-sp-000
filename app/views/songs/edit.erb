<h1>Update Song: <%= @song.name %></h1>

  <form action="/songs/<%= @song.slug %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">

    <label for="name">Song Name: </label>
      <input id="name" type="text" name="song[name]" value="<%= @song.name %>">

    <label for="artist_name">Artist Name: </label>
      <input id="artist_name" type="text" name="artist[name]" value="<%= @song.artist.name %>">
    <br><br>

    <% Genre.all.each do |genre| %>
    <label>Genre: </label>
      <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
    <% end %>
    <br><br>

    <input type="submit" value="Save">

</form>
