<h1>Update Song: <%= @song.name %></h1>

  <form action="/songs/<%= @song.slug %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">

    <label for="Name">Song Name: </label>
      <input id="Name" type="text" name="song[name]" value="<%= @song.name %>">

    <label for="Artist Name">Artist Name: </label>
      <input id="Artist Name" type="text" name="artist[name]" value="<%= @song.artist.name %>">
    <br><br>

    <% Genre.all.each do |genre| %>
      <label><%= genre.name %></label>
      <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
    <% end %>

    <input type="submit" value="Save">

</form>
